{
  "name": "assisthtec",
  "displayName": "AssistHTEC",
  "description": "Your local copilot!",
  "publisher": "marijajolovic",
  "icon": "icon.png",
  "version": "0.0.2",
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onCommand:assisthtec.triggerInline"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "assisthtec.triggerInline",
        "title": "AssistHtec: Trigger inline suggestion"
      }
    ],
    "keybindings": [
      {
        "command": "assisthtec.triggerInline",
        "key": "ctrl+alt+\\",
        "when": "editorTextFocus"
      }
    ],
    "configuration": {
      "title": "Assisthtec",
      "type": "object",
      "properties": {
        "assisthtec.endpoint": {
          "type": "string",
          "default": "http://127.0.0.1:8000/predict",
          "description": "URL Assisthtec API-ja (text/plain)."
        }
      }
    }
  },
  "enabledApiProposals": [
    "inlineCompletions"
  ],
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.96.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.16.0"
  },
  "dependencies": {
    "axios": "^1.7.9"
  }
}
